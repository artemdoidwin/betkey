<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <ImageView
            android:id="@+id/scan_success_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_done"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription"/>

    <TextView
            android:id="@+id/scan_success_logo_head_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="@string/scan_payout_success"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scan_success_logo"/>

    <TextView
            android:id="@+id/scan_success_created_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:text="@string/winner_created"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/scan_success_logo_head_text"/>

    <TextView
            android:id="@+id/scan_success_created"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="@string/scan_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/scan_success_barrier"
            app:layout_constraintTop_toTopOf="@+id/scan_success_created_title"/>

    <TextView
            android:id="@+id/scan_success_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:text="@string/winner_type"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/scan_success_created_title"/>

    <TextView
            android:id="@+id/scan_success_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="@string/scan_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/scan_success_barrier"
            app:layout_constraintTop_toTopOf="@+id/scan_success_type_title"/>

    <TextView
            android:id="@+id/scan_success_ticket_id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:text="@string/winner_ticket_id"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@+id/scan_success_type_title"/>

    <TextView
            android:id="@+id/scan_success_ticket_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="@string/scan_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/scan_success_barrier"
            app:layout_constraintTop_toTopOf="@+id/scan_success_ticket_id_title"/>

    <TextView
            android:id="@+id/scan_success_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="44sp"
            android:textAllCaps="true"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:textStyle="bold"
            tools:text="2000"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/scan_success_ticket_id_title"
            app:layout_constraintStart_toStartOf="@+id/scan_success_play_player"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/scan_success_currency"
            app:layout_constraintBottom_toTopOf="@+id/scan_success_play_player"/>

    <TextView
            android:id="@+id/scan_success_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="38sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            tools:text="CFA"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintBottom_toBottomOf="@+id/scan_success_sum"
            app:layout_constraintStart_toEndOf="@+id/scan_success_sum"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="@+id/scan_success_play_player"/>

    <TextView
            android:id="@+id/scan_success_play_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="21sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="@string/scan_payout_play_player"
            app:layout_constraintVertical_chainStyle="spread"
            app:layout_constraintEnd_toEndOf="@+id/scan_success_back_btn"
            app:layout_constraintStart_toStartOf="@+id/scan_success_back_btn"
            app:layout_constraintBottom_toTopOf="@+id/scan_success_back_btn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/scan_success_sum"
            app:layout_constraintHorizontal_bias="0.5"/>

    <Button
            android:id="@+id/scan_success_back_btn"
            style="@style/ButtonRedTheme"
            android:layout_width="@dimen/small_btn_width"
            android:layout_height="@dimen/small_btn_height"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="@string/home_btn"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <androidx.constraintlayout.widget.Barrier
            android:id="@+id/scan_success_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="scan_success_created_title,
            scan_success_type_title, scan_success_ticket_id_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>