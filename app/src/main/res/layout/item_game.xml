<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_winner_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/light_gray_color"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/item_winner_game_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:layout_marginTop="16dp"
            tools:text="GAME 1 - ENGLAND - PREMIER LEAGUE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/item_winner_comand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            tools:text="ARSENAL - LIVERPOOL"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_winner_game_name"/>

    <RelativeLayout
            android:id="@+id/item_winner_command_left_btn"
            style="@style/ButtonGrayTheme"
            android:layout_width="0dp"
            android:layout_height="@dimen/small_btn_height"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/item_winner_draw_btn"
            app:layout_constraintBottom_toBottomOf="@+id/item_winner_draw_btn"
            app:layout_constraintStart_toStartOf="parent">

        <TextView
                android:id="@+id/item_winner_command_left_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/frame_black"
                android:textAllCaps="true"
                android:text="@string/back_btn"
                android:textColor="@color/black"
                android:textSize="16sp"/>

    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/item_winner_draw_btn"
            style="@style/ButtonGrayTheme"
            android:layout_width="0dp"
            android:layout_height="@dimen/small_btn_height"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/item_winner_comand_name"
            app:layout_constraintEnd_toStartOf="@+id/item_winner_command_right_btn"
            app:layout_constraintStart_toEndOf="@+id/item_winner_command_left_btn">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/frame_black"
                android:textAllCaps="true"
                android:text="@string/jackpot_draw_btn"
                android:textColor="@color/black"
                android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/item_winner_command_right_btn"
            style="@style/ButtonGrayTheme"
            android:layout_width="0dp"
            android:layout_height="@dimen/small_btn_height"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/item_winner_draw_btn"
            app:layout_constraintBottom_toBottomOf="@+id/item_winner_draw_btn"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:id="@+id/item_winner_command_right_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/frame_black"
                android:textAllCaps="true"
                android:text="@string/back_btn"
                android:textColor="@color/black"
                android:textSize="16sp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>