<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/scan_detail_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription"/>

    <TextView
            android:id="@+id/scan_detail_head_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:text="@string/scan_ticket_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scan_detail_logo"/>

    <TextView
            android:id="@+id/scan_detail_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:text="@string/scan_detail_type"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/scan_detail_head_text"/>

    <TextView
            android:id="@+id/scan_detail_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:text="@string/wait"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/confirmation_titles_barrier"
            app:layout_constraintTop_toTopOf="@+id/scan_detail_type_title"/>


    <TextView
            android:id="@+id/scan_detail_jackpot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:text="@string/jackpot_jackpot_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/scan_detail_type_title"/>

    <TextView
            android:id="@+id/scan_detail_jackpot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="10 000 000 EUR"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/confirmation_titles_barrier"
            app:layout_constraintTop_toTopOf="@+id/scan_detail_jackpot_title"/>

    <TextView
            android:id="@+id/scan_detail_ticket_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:text="@string/jackpot_confirmation_ticket_price"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/scan_detail_jackpot_title"/>

    <TextView
            android:id="@+id/scan_detail_ticket_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="@string/wait"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/confirmation_titles_barrier"
            app:layout_constraintTop_toTopOf="@+id/scan_detail_ticket_price_title"/>

    <ImageView
            android:id="@+id/dotted_line1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:src="@drawable/dotted"
            android:layerType="software"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/scan_detail_ticket_price_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription"/>

    <TextView
            android:id="@+id/scan_detail_ticket_number_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:textAllCaps="true"
            android:text="@string/jackpot_confirmation_ticket_number"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/dotted_line1"/>

    <TextView
            android:id="@+id/scan_detail_ticket_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:text="@string/wait"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/confirmation_titles_barrier"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/dotted_line1"/>

    <TextView
            android:id="@+id/scan_detail_ticket_code_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:text="@string/jackpot_confirmation_ticket_code"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/scan_detail_ticket_number_title"/>

    <TextView
            android:id="@+id/scan_detail_ticket_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="@string/wait"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/confirmation_titles_barrier"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/scan_detail_ticket_code_title"/>


    <TextView
            android:id="@+id/scan_detail_created_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:text="@string/jackpot_confirmation_ticket_created"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/scan_detail_ticket_code_title"/>

    <TextView
            android:id="@+id/scan_detail_ticket_created"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="@string/wait"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/confirmation_titles_barrier"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="@+id/scan_detail_created_title"/>

    <ImageView
            android:id="@+id/dotted_line2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:src="@drawable/dotted"
            android:layerType="software"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/scan_detail_created_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="ContentDescription"/>

    <TextView
            android:id="@+id/scan_detail_bet_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="@string/jackpot_confirmation_bet_details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dotted_line2"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/scan_detail_bet_adapter"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_margin="8dp"
            tools:listitem="@layout/item_bet_detail"
            app:layout_constraintBottom_toTopOf="@+id/scan_detail_home_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scan_detail_bet_details_title"/>

    <Button
            android:id="@+id/scan_detail_home_btn"
            style="@style/ButtonGreenTheme"
            android:layout_width="@dimen/small_btn_width"
            android:layout_height="@dimen/small_btn_height"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="@string/back_btn"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

    </Button>

    <androidx.constraintlayout.widget.Barrier
            android:id="@+id/confirmation_titles_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="scan_detail_type_title,scan_detail_jackpot_title,scan_detail_ticket_price_title,scan_detail_ticket_number_title,scan_detail_ticket_code_title,scan_detail_created_title"/>


</androidx.constraintlayout.widget.ConstraintLayout>