<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/deposit_confirm_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/betslip_ligue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:text="@string/sportbetting_today"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/betslip_command_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="@string/sportbetting_today"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/betslip_ligue_name"/>


    <TextView
            android:id="@+id/betslip_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_marginTop="5dp"
            android:text="@string/sportbetting_today"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/betslip_command_name"/>

    <TextView
            android:id="@+id/betslip_market_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="@string/sportbetting_today"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/betslip_date"/>

    <TextView
            android:id="@+id/betslip_team_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="@string/sportbetting_bet"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/betslip_market_name"/>

    <TextView
            android:id="@+id/betslip_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="@string/sportbetting_today"
            app:layout_constraintTop_toTopOf="@+id/betslip_team_name_title"
            app:layout_constraintStart_toEndOf="@+id/betslip_team_name_title"
            android:layout_marginStart="8dp"/>


    <TextView
            android:id="@+id/betslip_team_odds_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="@string/sportbetting_odds"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/betslip_team_name_title"/>

    <TextView
            android:id="@+id/betslip_team_odds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:text="@string/sportbetting_odds"
            app:layout_constraintTop_toTopOf="@+id/betslip_team_odds_title"
            app:layout_constraintStart_toEndOf="@+id/betslip_team_odds_title"
            android:layout_marginStart="8dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>