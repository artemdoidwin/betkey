<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <ImageView
            android:id="@+id/deposit_found_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_person"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/deposit_found_head_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:text="@string/deposit_found_player"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/deposit_found_logo"/>

    <TextView
            android:id="@+id/deposit_found_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:text="@string/deposit_player_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/deposit_found_head_text"/>

    <TextView
            android:id="@+id/deposit_found_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            tools:text="@string/jackpot_round_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/deposit_titles_barrier"
            app:layout_constraintTop_toBottomOf="@+id/deposit_found_head_text"/>

    <TextView
            android:id="@+id/deposit_found_phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:text="@string/deposit_mob_num"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/deposit_found_name_title"/>

    <TextView
            android:id="@+id/deposit_found_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            tools:text="@string/jackpot_round_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/deposit_titles_barrier"
            app:layout_constraintTop_toBottomOf="@+id/deposit_found_name"/>

    <TextView
            android:id="@+id/deposit_found_amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:text="@string/deposit_amount"

            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/deposit_found_phone_title"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/deposit_titles_barrier"/>


    <RelativeLayout
            android:id="@+id/deposit_found_amount_view"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            style="@style/EditTextTheme"
            android:padding="6dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/deposit_titles_barrier"
            app:layout_constraintTop_toTopOf="@+id/deposit_found_amount_title"
            app:layout_constraintBottom_toBottomOf="@+id/deposit_found_amount_title">

        <EditText
                android:id="@+id/deposit_found_amount_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="1000"
                android:inputType="number"
                tools:ignore="Autofill,TextFields"/>

    </RelativeLayout>

    <TextView
            android:id="@+id/deposit_found_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            tools:text="CFA"
            app:layout_constraintStart_toEndOf="@+id/deposit_found_amount_view"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/deposit_found_amount_title"
            app:layout_constraintTop_toTopOf="@+id/deposit_found_amount_title"/>

    <Button
            android:id="@+id/deposit_found_btn"
            style="@style/ButtonGreenTheme"
            android:layout_width="@dimen/big_btn_width"
            android:layout_height="@dimen/big_btn_height"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:enabled="false"
            android:textAllCaps="true"
            android:text="@string/deposit_deposit"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/deposit_found_back_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:id="@+id/deposit_found_back_btn"
            style="@style/ButtonRedTheme"
            android:layout_width="@dimen/small_btn_width"
            android:layout_height="@dimen/small_btn_height"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="@string/back_btn"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/deposit_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Barrier
            android:id="@+id/deposit_titles_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="deposit_found_name_title, deposit_found_phone_title"/>

</androidx.constraintlayout.widget.ConstraintLayout>